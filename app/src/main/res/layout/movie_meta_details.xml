<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="@dimen/thumbnail_width"
            android:layout_height="@dimen/thumbnail_height"
            android:layout_marginTop="@dimen/margin_top"
            android:contentDescription="@string/thumbnail_description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/test_image"/>

        <TextView
            android:id="@+id/release_date"
            style="@style/MovieDetailMeta"
            app:layout_constraintLeft_toRightOf="@+id/thumbnail"
            app:layout_constraintBottom_toBottomOf="@+id/thumbnail"
            app:layout_constraintTop_toTopOf="@+id/thumbnail"
            app:layout_constraintVertical_bias="0"
            tools:text="2016"/>

        <TextView
            android:id="@+id/runtime"
            style="@style/MovieDetailMeta"
            android:textStyle="bold|italic"
            app:layout_constraintLeft_toRightOf="@+id/thumbnail"
            app:layout_constraintBottom_toBottomOf="@+id/thumbnail"
            app:layout_constraintTop_toTopOf="@+id/thumbnail"
            app:layout_constraintVertical_bias="0.25"
            tools:text="120min"/>

        <TextView
            android:id="@+id/rating"
            style="@style/MovieDetailMeta"
            android:paddingLeft="@dimen/rating_padding"
            android:paddingStart="@dimen/rating_padding"
            android:paddingRight="@dimen/rating_padding"
            android:paddingEnd="@dimen/rating_padding"
            android:textSize="@dimen/text_size"
            android:textColor="@android:color/black"
            app:layout_constraintLeft_toRightOf="@+id/thumbnail"
            app:layout_constraintBottom_toBottomOf="@+id/thumbnail"
            app:layout_constraintTop_toTopOf="@+id/thumbnail"
            app:layout_constraintVertical_bias="0.5"
            tools:text="7.9/10"/>

        <ImageView
            android:id="@+id/star"
            android:layout_width="@dimen/favorite_star_width"
            android:layout_height="@dimen/favorite_star_height"
            android:src="@drawable/ic_star"
            android:contentDescription="@string/mark_as_favorite"
            app:layout_constraintLeft_toRightOf="@+id/thumbnail"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/thumbnail"
            app:layout_constraintTop_toTopOf="@+id/thumbnail"
            app:layout_constraintVertical_bias="0.90"/>

    </android.support.constraint.ConstraintLayout>

</layout>