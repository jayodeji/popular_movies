<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_detail"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.jayodeji.android.popularmovies.MovieDetailActivity">

        <TextView
            android:id="@+id/tv_movie_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/title_padding"
            android:textSize="@dimen/title_size"
            android:textColor="@color/colorMovieTitleText"
            android:background="@color/colorMovieTitleBackground"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="Chappie"/>

        <ScrollView
            android:id="@+id/sv_movie_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_detail_margin"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_title"
            app:layout_constraintLeft_toLeftOf="@+id/tv_movie_title"
            app:layout_constraintRight_toRightOf="@+id/tv_movie_title">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_movie_thumbnail"
                    android:layout_width="150dp"
                    android:layout_height="210dp"
                    android:layout_marginTop="@dimen/activity_detail_margin"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/test_image"/>

                <TextView
                    android:id="@+id/tv_release_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_detail_margin"
                    android:layout_marginLeft="@dimen/activity_detail_left_margin"
                    android:layout_marginStart="@dimen/activity_detail_left_margin"
                    android:textSize="@dimen/release_date_size"
                    app:layout_constraintLeft_toRightOf="@+id/iv_movie_thumbnail"
                    app:layout_constraintTop_toBottomOf="@+id/iv_movie_thumbnail"
                    app:layout_constraintBottom_toTopOf="@+id/iv_movie_thumbnail"
                    app:layout_constraintVertical_bias="0.85"
                    tools:text="2016"/>

                <TextView
                    android:id="@+id/tv_runtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_detail_top_margin"
                    android:layout_marginLeft="@dimen/activity_detail_left_margin"
                    android:layout_marginStart="@dimen/activity_detail_left_margin"
                    android:textSize="@dimen/runtime_size"
                    app:layout_constraintLeft_toRightOf="@+id/iv_movie_thumbnail"
                    app:layout_constraintTop_toBottomOf="@+id/iv_movie_thumbnail"
                    app:layout_constraintBottom_toTopOf="@+id/iv_movie_thumbnail"
                    app:layout_constraintVertical_bias="0.7"
                    tools:text="120min"/>

                <TextView
                    android:id="@+id/tv_movie_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_detail_top_margin"
                    android:layout_marginLeft="@dimen/activity_detail_left_margin"
                    android:layout_marginStart="@dimen/activity_detail_left_margin"
                    android:textSize="@dimen/generic_text_size"
                    android:textStyle="bold"
                    app:layout_constraintLeft_toRightOf="@+id/iv_movie_thumbnail"
                    app:layout_constraintTop_toBottomOf="@+id/iv_movie_thumbnail"
                    app:layout_constraintBottom_toTopOf="@+id/iv_movie_thumbnail"
                    app:layout_constraintVertical_bias="0.6"
                    tools:text="7.9/10"/>

                <TextView
                    android:id="@+id/tv_movie_overview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/generic_text_size"
                    android:layout_marginTop="@dimen/activity_detail_top_margin"
                    app:layout_constraintTop_toBottomOf="@+id/iv_movie_thumbnail"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    tools:text="A rogue band of resistance fighters unite for a mission to steal the Death Star plans and bring a new hope to the galaxy."/>

                <TextView
                    android:id="@+id/tv_trailer_caption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="24sp"
                    android:textColor="@android:color/black"
                    android:text="@string/trailer_section_caption"
                    app:layout_constraintTop_toBottomOf="@+id/tv_movie_overview"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginBottom="@dimen/activity_detail_top_margin"
                    app:layout_constraintBottom_toTopOf="@+id/tv_trailer_caption"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_trailer_caption"
                    app:layout_constraintRight_toRightOf="@+id/tv_trailer_caption"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_movie_trailers"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_trailer_caption"
                    app:layout_constraintLeft_toLeftOf="@+id/tv_trailer_caption"
                    app:layout_constraintRight_toRightOf="@+id/tv_trailer_caption"/>

            </android.support.constraint.ConstraintLayout>

        </ScrollView>

        <TextView
            android:id="@+id/tv_error_message_display"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_padding"
            android:text="@string/detail_error_message"
            android:textSize="@dimen/error_message_text_size"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_title"
            app:layout_constraintLeft_toLeftOf="@+id/tv_movie_title"
            app:layout_constraintRight_toRightOf="@+id/tv_movie_title"/>

        <ProgressBar
            android:id="@+id/pb_loading_indicator"
            android:layout_width="@dimen/progress_bar_width"
            android:layout_height="@dimen/progress_bar_height"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</layout>