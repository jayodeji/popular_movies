<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_detail"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.jayodeji.android.popularmovies.MovieDetailActivity">

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/title_padding"
            android:textSize="@dimen/title_size"
            android:textColor="@color/colorPrimaryText"
            android:background="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="Chappie"/>

        <ScrollView
            android:id="@+id/movie_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_detail_margin"
            android:paddingBottom="@dimen/scroll_view_padding"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/movie_title"
            app:layout_constraintLeft_toLeftOf="@+id/movie_title"
            app:layout_constraintRight_toRightOf="@+id/movie_title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/meta_info"
                    layout="@layout/movie_meta_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <include
                    android:id="@+id/extra_info"
                    layout="@layout/movie_extra_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/error_message_display"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_padding"
            android:text="@string/detail_error_message"
            android:textSize="@dimen/error_message_text_size"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/movie_title"
            app:layout_constraintLeft_toLeftOf="@+id/movie_title"
            app:layout_constraintRight_toRightOf="@+id/movie_title"/>

        <ProgressBar
            android:id="@+id/loading_indicator"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</layout>