<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MovieDetailMeta">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:layout_marginLeft">@dimen/margin_left</item>
        <item name="android:textSize">@dimen/meta_text_size</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItemCaption">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/caption_text_size</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ListItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/list_item_left_margin</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ListItemIcon">
        <item name="android:layout_height">@dimen/list_icon_height</item>
        <item name="android:layout_width">@dimen/list_icon_width</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="BorderLine">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/horizontal_line_height</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>
</resources>
